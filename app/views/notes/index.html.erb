<ul class="nav nav-tabs" role="tablist">
  <li><%= link_to 'Home', '/' %></li>
  <li><%= link_to 'WaPo Headline Scraper', controller: 'headlines' %></li>
  <li><%= link_to 'CRUD demo', controller: 'notes' %></li>
  <li><%= link_to 'Code Repository', 'https://github.com/robertcharlesfox/ruby_scraper' %></li>
</ul>

<div id="main-container" class="container-fluid">
  <div class="row">
    <div id="main-content" class="col-xs-12">

      <h1>Notes</h1>
      <%= link_to 'New Note', new_note_path %>
      <table class="table">
        <tr>
          <th>Title</th>
          <th>Text</th>
          <th>Created At</th>
          <th colspan="3"></th>
        </tr>
       
        <% @notes.each do |note| %>
          <tr>
            <td><%= note.title %></td>
            <td><%= note.text %></td>
            <td><%= note.created_at %></td>
            <td><%= link_to 'Show', note_path(note) %></td>
            <td><%= link_to 'Edit', edit_note_path(note) %></td>
            <td><%= link_to 'Delete', note_path(note),
                    method: :delete,
                    data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </table>

    </div>
  </div>
</div>